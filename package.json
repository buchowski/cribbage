{
  "name": "cribbage",
  "version": "1.0.0",
  "description": "A JavaScript cribbage game two users can play over the web.",
  "main": "app.js",
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/jquery": "2.0.34",
    "browserify": "13.1.1",
    "chai": "3.5.0",
    "concurrently": "3.1.0",
    "mocha": "3.2.0",
    "typescript": "2.1.4",
    "watchify": "3.8.0"
  },
  "scripts": {
    "test": "mocha",
    "build": "concurrently \"npm run prepFolders\" \"tsc\" && npm run browserify && npm run test && npm run watchify",
    "prepFolders": "rm -rf dist && mkdir dist && mkdir dist/client && mkdir dist/client/js",
    "browserify": "concurrently \"npm run browserifyClient\" \"npm run browserifyTest\"",
    "browserifyClient": "browserify -d purgatory/src/ts/client/index.js -o dist/client/js/app.js",
    "browserifyTest": "browserify -d purgatory/test/specs/index.js -o test/test-app.js",
    "watchify": "concurrently \"tsc -w\" \"watchify -d purgatory/src/ts/client/index.js -o dist/client/js/app.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buchowski/cribbage.git"
  },
  "keywords": [
    "cribbage"
  ],
  "author": "buchowski",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/buchowski/cribbage/issues"
  },
  "homepage": "https://github.com/buchowski/cribbage#readme"
}
