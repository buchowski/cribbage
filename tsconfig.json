{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "purgatory"
  },
  "include": [
    "src/ts/**/*",
    "test/specs/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*-aot.ts"
  ]
}
